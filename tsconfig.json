{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "es6",
    "strict": true,
    "outDir": "dist",
    "lib": ["es2017"],
    "baseUrl": ".",
    "paths": {
      "@bot/*": ["src/bot/*"],
      "@config/*": ["src/config/*"],
      "@database/*": ["src/database/*"],
      "@monitor/*": ["src/monitor/*"]
    },
    "incremental": true
  },
  "include": ["src/**/*", "bin/**/*"],
  "exclude": ["**/__tests__"]
}

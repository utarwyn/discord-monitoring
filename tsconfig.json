{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "es2021",
    "strict": true,
    "outDir": "dist",
    "lib": ["es2021"],
    "baseUrl": ".",
    "paths": {
      "@bot/*": ["src/bot/*"],
      "@config/*": ["src/config/*"],
      "@database/*": ["src/database/*"],
      "@i18n/*": ["src/i18n/*"],
      "@monitor/*": ["src/monitor/*"]
    },
    "incremental": true
  },
  "include": ["src/**/*", "bin/**/*"]
}
